<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Ram.Francis.RamsOrder.MainActivity"
    android:fillViewport="false">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/btnRam1whun"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1e90ff"
                android:onClick="onClickRams"
                android:text="Transcend"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnRam2whun"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1e90ff"
                android:onClick="onClickRams"
                android:text="HyperX" />

            <Button
                android:id="@+id/btnRam3whun"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1e90ff"
                android:onClick="onClickRams"
                android:text="Corsair"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnRam4whun"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1e90ff"
                android:onClick="onClickRams"
                android:text="Gskill"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnRam5whun"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1e90ff"
                android:onClick="onClickRams"
                android:text="Samsung"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgJeans"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="false"
                android:layout_column="1"
                android:adjustViewBounds="false"
                tools:ignore="ContentDescription,ObsoleteLayoutParam" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name:"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtName"
                android:layout_weight="2"
                android:autoText="false"
                android:background="#d1d0d0"
                android:textColor="#0a0c81"
                tools:ignore="TextViewEdits" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Description:"
                android:textSize="10dp"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtDesc"
                android:layout_weight="2"
                android:background="#d1d0d0"
                android:textColor="#0a0c81" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Price:"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtPrice"
                android:layout_weight="2"
                android:background="#d1d0d0"
                android:textColor="#0a0c81" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="GB"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0 %"
                android:id="@+id/txtGB"
                android:layout_weight="1"
                android:background="#d1d0d0"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#0a0c81"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SeekBar
                android:id="@+id/seekBarGB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:indeterminate="false"
                android:max="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Speed"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/_0"
                android:id="@+id/txtSpeed"
                android:layout_weight="1"
                android:background="#d1d0d0"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#0a0c81" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarSpeed"
                android:layout_weight="3"
                android:indeterminate="false"
                android:max="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:measureWithLargestChild="true"
            android:padding="5dp">

            <ToggleButton
                android:id="@+id/toggleButtonRepair"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="New ToggleButton"
                android:textOff="Pickup Delivery"
                android:textOn="Not Available"
                tools:ignore="HardcodedText" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/of_pairs"
                        android:id="@+id/textView11"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:id="@+id/txtQuantity"
                        android:layout_weight="1"
                        android:background="#d1d0d0"
                        android:gravity="center_vertical|center_horizontal"
                        tools:ignore="HardcodedText" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnPlus"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+"
                        tools:ignore="HardcodedText" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/btnMinus"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:id="@+id/btnAddCart"
                android:layout_weight="1"
                android:background="#3e84f5"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="View Order"
                android:id="@+id/btnViewOrder"
                android:layout_weight="1"
                android:background="#f29634"
                tools:ignore="ButtonStyle" />
        </TableRow>

    </TableLayout>

</ScrollView>
